@model IEnumerable<PatientCard.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeService)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeService)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdService">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdService">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdService">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
