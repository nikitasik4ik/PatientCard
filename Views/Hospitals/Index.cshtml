                @Html.DisplayNameFor(model => model.DateDischarge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reception)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.IdDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.IdOrganization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InspectionHospital.IdInspectionHospital)
