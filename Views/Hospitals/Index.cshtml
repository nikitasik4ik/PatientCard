            <td>
                @Html.DisplayFor(modelItem => item.Ward)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operation.IdOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reception.IdReception)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHospital">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdHospital">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHospital">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
