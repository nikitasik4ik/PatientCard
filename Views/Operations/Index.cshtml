@model IEnumerable<PatientCard.Models.Operation>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f7f7f7;
    }

    .table-dark {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: #454d55;
        }
</style>

<h1>Операция</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Создать новое</a>
</p>
<div class="table-responsive">
    <table id="dataTable" class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisOperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationOperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProtocolOperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Financing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.NameDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.NameService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProtocolOperation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Financing.FinancingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FullNameDoctor)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdOperation"><i class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdOperation"><i class="fas fa-info"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdOperation"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
