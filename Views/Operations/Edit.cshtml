            </div>
            <div class="form-group">
                <label asp-for="ProtocolOperation" class="control-label"></label>
                <input asp-for="ProtocolOperation" class="form-control" />
                <span asp-validation-for="ProtocolOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFinancing" class="control-label"></label>
                <select asp-for="IdFinancing" class="form-control" asp-items="ViewBag.IdFinancing"></select>
                <span asp-validation-for="IdFinancing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDoctor" class="control-label"></label>
                <select asp-for="IdDoctor" class="form-control" asp-items="ViewBag.IdDoctor"></select>
                <span asp-validation-for="IdDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

