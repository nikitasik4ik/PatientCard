            </div>
            <div class="form-group">
                <label asp-for="IdDepartament" class="control-label"></label>
                <select asp-for="IdDepartament" class="form-control" asp-items="ViewBag.IdDepartament"></select>
                <span asp-validation-for="IdDepartament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdOrganization" class="control-label"></label>
                <select asp-for="IdOrganization" class="form-control" asp-items="ViewBag.IdOrganization"></select>
                <span asp-validation-for="IdOrganization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiagnosisOperation" class="control-label"></label>
                <input asp-for="DiagnosisOperation" class="form-control" />
                <span asp-validation-for="DiagnosisOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdService" class="control-label"></label>
                <select asp-for="IdService" class="form-control" asp-items="ViewBag.IdService"></select>
