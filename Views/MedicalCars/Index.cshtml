@model IEnumerable<PatientCard.Models.MedicalCar>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f7f7f7;
    }

    .table-dark {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: #454d55;
        }
</style>

<h1>Скорая медицинская помощь</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Создать новое</a>
</p>
<div class="table-responsive">
    <table id="dataTable" class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateMedicalCar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceExit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReasonExit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultExit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueExit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateMedicalCar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceExit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonExit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultExit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueExit)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullNameDoctor)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.IdMedicalCar"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.IdMedicalCar"><i class="fas fa-info"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.IdMedicalCar"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
