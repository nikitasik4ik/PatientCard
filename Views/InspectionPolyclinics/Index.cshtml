                @Html.DisplayFor(modelItem => item.Departament.IdDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.IdDoctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.IdService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complaints)
            </td>
