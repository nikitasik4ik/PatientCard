                @Html.DisplayFor(modelItem => item.AnamnesisDisease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInspectionPoliclinic">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdInspectionPoliclinic">Details</a> |
